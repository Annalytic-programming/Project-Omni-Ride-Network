@{
    ViewData["Title"] = "Fahrzeuge";
}
<h1 class="home">Diese Fahrzeuge stehen zur Auswahl</h1>
<div class="overview-grid">

    <div class="filter">
        <h2>Filter</h2>
        <label for="searchFilter">Suche</label>
        <br />
        <input id="searchFilter" type="text" />
        <br />


        <select id="categoryFilter">
            <option value="">-</option>
            <option value="1">Leihe</option>
            <option value="2">Sharing</option>
        </select>
        <label for="categoryFilter">Kategorie</label>
        <br>
        <select id="brandFilter">
            <option value="">-</option>
            @foreach (var brand in Model.BrandFilterList) {
                <option value="@brand">@brand</option>
            }
        </select>
        <label for="brandFilter">Marke</label>
        <br>

        <select id="modelFilter">
            <option value="">-</option>
            @foreach (var m in Model.ModelFilterList) {
                <option value="@m">@m</option>
            }
        </select>
        <label for="modelFilter">Modell</label>
        <br>

        <select id="typeFilter">
            <option value="">-</option>
            <option value="1">Auto</option>
            <option value="2">Fahrrad</option>
            <option value="3">Scooter</option>
            <option value="4">LWK</option>
            <option value="5">Bus</option>
        </select>
        <label for="typeFilter">Typ</label>
        <br>
        <label for="minPriceFilter">Min. Preis</label>
        <br />
        <input id="minPriceFilter" type="number" step="0.01" />
        <br>
        <label for="maxPriceFilter">Max. Preis</label>
        <br />
        <input id="maxPriceFilter" type="number" step="0.01" />
    </div>

    <div class="prod">
        @foreach (var veh in Model.Vehicles) {
            <div class="child">
                <div class="container fahrzeuginfo">
                    <div class="attributes">
                        <div class="container row">
                            <div class="carattribute">
                                <mark class="tabellenueberschrift">Anbieter</mark> <br> @veh.Firm
                            </div>
                            <div class="carattribute">
                                <mark class="tabellenueberschrift">Kategorie</mark> <br> @veh.GetCategoryAsString()
                            </div>
                        </div>
                        <div class="container row">
                            <div class="carattribute">
                                <mark class="tabellenueberschrift">Marke</mark> <br> @veh.Brand
                            </div>
                            <div class="carattribute">
                                <mark class="tabellenueberschrift">Modell</mark> <br> @veh.Model
                            </div>
                            <div class="carattribute">
                                <mark class="tabellenueberschrift">Grundpreis</mark> <br> @veh.BasicPrice
                            </div>
                        </div>
                    </div>
                    <img src="@veh.PathToImg" width="120em" height="120em" />
                    <div class="break"></div>
                    <a class="button" href="/booking/@veh.VehicleId">Zur Buchung</a>
                </div>
            </div>
        }
    </div>
</div>